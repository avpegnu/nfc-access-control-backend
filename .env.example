# Server Configuration
NODE_ENV=development
PORT=3001

# JWT Configuration (Frontend Auth)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Firebase Web API Key (for login authentication)
FIREBASE_WEB_API_KEY=your-firebase-web-api-key

# Firebase Admin SDK
# Option 1: Service account JSON as string
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"..."}

# Option 2: Path to service account file (uncomment if using file)
# FIREBASE_SERVICE_ACCOUNT_PATH=./serviceAccountKey.json

# Firebase Database URL
FIREBASE_DATABASE_URL=https://your-project-id-default-rtdb.firebasedatabase.app

# Device Secrets for ESP32 Registration (JSON array)
# Each device needs a pre-shared secret to register and get a token
DEVICE_SECRETS=[{"device_id":"reader-lobby-01","secret":"change-this-secret"},{"device_id":"reader-door-a1","secret":"change-this-secret-too"}]

# Device JWT Settings (for ESP32 authentication)
DEVICE_JWT_SECRET=your-device-jwt-secret-key
DEVICE_JWT_EXPIRES_IN=365d

# Credential (Card JWT) Settings
# CREDENTIAL_EXPIRES_IN is in seconds (default: 30 days = 2592000)
CREDENTIAL_EXPIRES_IN=2592000

# EdDSA Keys for Card Credentials (optional - auto-generated if not provided)
# CREDENTIAL_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----
# CREDENTIAL_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----
# CREDENTIAL_KEY_ID=main-key-2024

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=10
